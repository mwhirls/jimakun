{
    "manifest_version": 3,
    "name": "Jimakun",
    "version": "1.0.0",
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "js": [
                "content.bundle.js"
            ],
            "matches": [
                "https://www.netflix.com/*"
            ]
        },
        {
            "js": [
                "interceptor.bundle.js"
            ],
            "matches": [
                "https://www.netflix.com/*"
            ],
            "run_at": "document_start",
            "world": "MAIN"
        }
    ],
    "background": {
        "service_worker": "service-worker.bundle.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "dict/*"
            ],
            "matches": [
                "https://www.netflix.com/*"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "tts"
    ],
    "commands": {
        "prev-cue": {
            "suggested_key": {
                "default": "Ctrl+Left",
                "mac": "Command+Left"
            },
            "description": "Jump to the previous subtitle"
        },
        "repeat-cue": {
            "suggested_key": {
                "default": "Ctrl+Up",
                "mac": "Command+Up"
            },
            "description": "Replay the current subtitle"
        },
        "next-cue": {
            "suggested_key": {
                "default": "Ctrl+Right",
                "mac": "Command+Right"
            },
            "description": "Jump to the next subtitle"
        },
        "toggle-subs": {
            "suggested_key": {
                "default": "Alt+S"
            },
            "description": "Show/hide the subtitles"
        }
    }
}